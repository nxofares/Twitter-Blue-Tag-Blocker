{
  "manifest_version": 3,
  "name": "Twitter Blue Tag Blocker",
  "version": "1.0",
  "description": "Blocks Twitter users with blue verification badges.",
    "permissions": [
      "scripting",
      "https://twitter.com/*"
    ],

  "host_permissions": [
    "https://*.twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  }
}
